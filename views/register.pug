extends header 

block content
    .container-register
        h1.titlePage Registrar Nuevo Usuario

        form(action='/get-user' method='post' class="container-form-register")
            .groupForm
                label(for='').form-label Nombre
                input.form-input(type='text' name='' id='' placeholder='Introducir Nombre Completo', required, autofocus)
            .groupForm 
                label(for='').form-label Correo
                input.form-input(type='email' name='' id='' placeholder='Introducir Correo Electrónico', required)
            .groupForm
                label(for="").form-label Usuario
                input.form-input(type="text" name='' id='' placeholder='Introducir Nombre para el Usuario', required)
            .groupForm
                label(for="").form-label Contraseña
                input.form-input(type="password" name='' id='' placeholder='Introducir Contraseña', required) 
            .groupForm
                label(for="").form-label Confirmar Contraseña
                input.form-input(type="password" name='' id='' placeholder='Confirmar Contraseña', required)
            .form-group
                button(type='submit' class='btn-send') Registrarse
        p ¿Ya tienes cuenta? 
            a(href='/login' class='suggesting-link') Iniciar sesión
