extends header 

block content
    .container-register
        h1.titlePage(class='register-title') Crea una cuenta
        form(action='/get-user' method='post')
            .register-row
                .groupForm-register
                    label(for='').form-label Nombre de pila
                    input.form-input-register(type='text' name='' id='' placeholder='Agregar Nombre', required, autofocus)
                .groupForm-register
                    label(for='').form-label Apellido
                    input.form-input-register(type='text' name='' id='' placeholder='Agregar Apellido', required, autofocus)
            .register-row
                .groupForm-register
                    label(for="").form-label Usuario
                    input.form-input-register(type="text" name='' id='' placeholder='Crear Nombre de Usuario', required) 
                .groupForm-register
                    label(for='').form-label Correo
                    input.form-input-register(type='email' name='' id='' placeholder='Agregar Correo Electrónico', required)
            .register-row
                .groupForm-register
                    label(for="").form-label Contraseña
                    input.form-input-register(type="password" name='' id='' placeholder='Crear Contraseña', required) 
                .groupForm-register
                    label(for="").form-label Confirmar Contraseña
                    input.form-input-register(type="password" name='' id='' placeholder='Confirmar Contraseña', required)
            .groupForm-btnRegister
                button(type='submit' class='btn-send btnRegister') Crear Cuenta
        hr.register-line-down
        .text-down-login
            p ¿Ya tienes cuenta? 
            a(href='/login' class='suggesting-link') Iniciar sesión
            p(class='suggesting-link-text') aqui
