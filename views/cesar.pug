                        option(value="20") 20
                        option(value="21") 21
                        option(value="22") 22
                        option(value="23") 23
                        option(value="24") 24
                        option(value="25") 25
                        option(value="26") 26

                label(for='originalText' class='label-cipherPage') Pegue el texto que desea cifrar aquí:    
                .box-text-cipherPage 
                    textarea.form-textarea(name='originalText' id='originalText' rows='12' cols='60' placeholder='Introducir Texto para cifrar'  autofocus)
                .box-btn-cipherPage
                    button(type='submit' class='btn-cipherPage') Cifrar Texto

            .form-cipherPage
                label(for='textCesar' class='label-cipherPage') Copie el texto Cifrado: 
                .box-text-cipherPage 
                    textarea.form-textarea(class='textarea-blocked' name='textCesar' id='textCesar' rows='12' cols='60' readonly)= textoCifrado
                .box-btn-cipherPage
                    button(onclick='copyText()', type='button' class='btn-cipherPage') Copiar Texto 

    script.
        function copyText() {
            const textCesar = document.getElementById('textCesar');
            textCesar.select();
            document.execCommand('copy');
        }
    
        // Obtener el valor del parámetro textoCifrado de la URL
        const urlParams = new URLSearchParams(window.location.search);
        const textoCifrado = urlParams.get('textoCifrado');
    
        // Mostrar el texto cifrado en el textarea
        if (textoCifrado) {
            document.getElementById('textCesar').value = decodeURIComponent(textoCifrado);
        }