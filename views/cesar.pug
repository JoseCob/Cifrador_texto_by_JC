extends header 

block content
    .cipherPage-container
        h1.title-cipherPage #{title}
        .cipherPage-box 
            strong.messageAlert Tienes (x) Intentos Para Cifrar
            form(action='/encrypt-cesar' method='POST' class='form-cipherPage')
                .box-clave-cipherPage
                    label(for='clave') Clave: 
                    select(name='clave' class='select-clave-cipherPage')
                        option(value="0") 0
                        option(value="1") 1
                        option(value="2") 2
                        option(value="3") 3
                        option(value="4") 4
                        option(value="5") 5
                        option(value="6") 6
