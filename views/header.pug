//header.pug
doctype html 
html
    head
        title #{title}
        link(rel='stylesheet', href='/css/styles.css')
        link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200') 
        link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200') 
    body
        nav
            ul
                li
                    a(href='/') 
                        i.material-symbols-outlined home
                        span &nbsp;Inicio
                li 
                    a(href='/ciphers')
                        i.material-symbols-outlined encrypted
                        span &nbsp;Cifradores
                if !user
                    li
                        a(href='/login') 
                            i.material-symbols-outlined account_circle
                            span &nbsp;Iniciar Sesi√≥n
                else
                    li
                        a(href='/logout')
                            i.material-symbols-rounded logout
                        
        .container-header
            hr
            .contain-header
                .left-content
                    i(class='arrow-icon-left').material-symbols-outlined arrow_right 
                    h2 Cifrador de Textos Online
                h1(class='title-text-header') ENCRTEXT
            hr

        block content
